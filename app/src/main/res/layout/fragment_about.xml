<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/paddingAbout"
    tools:context=".AboutFragment">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/earthAnim"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/earth"
            />

        <TextView
            android:id="@+id/tvApplication"
            android:text="@string/application_made_by_algebra_students"
            android:textSize="@dimen/textSizeAbout"
            android:gravity="top|center"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

</LinearLayout>